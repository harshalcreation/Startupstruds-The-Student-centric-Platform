

<body>
	<% layout("layouts/boilerplate.ejs") %>
	
	<div class="row">
        <div class="col-8 offset-2">
            <form method="POST" action="/listings/<%= listing._id %>?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data">
                <div class="mb-4"><h3>Edit your details</h3></div>
                <div class="mb-3">
                    <label for="title" class="form-label">Enter Title: <span class="text-danger">*</span></label>
                    <input type="text" name="listing[title]" id="title" value="<%= listing.title %>" class="form-control" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Please provide a title.
                    </div>
                </div>
                
                <div class="mb-3">
                    <label for="description" class="form-label">Enter Start-description: <span class="text-danger">*</span></label>
                    <textarea name="listing[description]" id="description" cols="30" rows="10" class="form-control" required><%= listing.description %></textarea>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Please provide a description.
                    </div>
                </div>
        
                <div class="mb-3">
                    <label for="price" class="form-label">Enter Funding required: <span class="text-danger">*</span></label>
                    <input type="text" name="listing[price]" id="price" value="<%= listing.price %>" class="form-control" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Please provide a price.
                    </div>
                </div>
                
                <div class="row mb-3">
                    <div class="col-md-4">
                        <label for="location" class="form-label">Enter location:</label>
                        <input type="text" name="listing[location]" id="location" value="<%= listing.location %>" class="form-control" required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                        <div class="invalid-feedback">
                            Please provide a location.
                        </div>
                    </div>
                    <div class="col-md-8">
                        <label for="country" class="form-label">Enter country:</label>
                        <input type="text" name="listing[country]" id="country" value="<%= listing.country %>" class="form-control" required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                        <div class="invalid-feedback">
                            Please provide a country.
                        </div>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-9">
                        <label for="image" class="form-label">Upload new Image: </label>
                        <input type="file" name="listing[image]" id="image"  class="form-control">
                    </div>
                    <div class="col-md-3">
                        <label for="image" class="form-label">Image Preview: </label>
                        <img src="<%= OrignalUrl %>" alt="listing-Image-Preview">
                    </div>
                    
                </div>
                
                <div class="d-flex justify-content-center">
                    <button type="submit" class="btn btn-primary mb-3 large-button">ADD</button>
                </div>
            </form>
        </div>
    </div>


</body>
		
